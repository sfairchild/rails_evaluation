<p id="notice"><%= notice %></p>

<h1>Lists <%= link_to content_tag(:i, '', class: 'fa fa-plus'), new_list_path, class: 'btn btn-primary' %></h1>

<% @lists.each_slice(3) do |lists| %>
  <div class='row mt-3'>
    <% lists.each do |list| %>
      <div class='col-4'>
        <div class='card'>
          <div class='card-body'>
            <h4 class='card-title'><%= link_to list.name, list %></h4>
            <p class='card-text'><%= list.description %></p>
            <%= link_to content_tag(:i, nil, class: 'fa fa-pencil'), edit_list_path(list), class: 'btn btn-primary' %>
            <%= link_to content_tag(:i, nil, class: 'fa fa-trash'), list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            <div class='text-right'>(items: <%= list.items.count %>)</div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
<br>

